<td class="px-4 py-4 text-sm font-medium whitespace-nowrap">
    {% if entity.isPrivate %}
        {% set entity_color = 'text-red-500' %}
        {% set entity_text = 'class.methods.private'|trans({}, 'nvdoc_namespace') %}
    {% elseif entity.isProtected %}
        {% set entity_color = 'text-gray-300' %}
        {% set entity_text = 'class.methods.protected'|trans({}, 'nvdoc_namespace') %}
    {% else %}
        {% set entity_color = 'text-emerald-500' %}
        {% set entity_text = 'class.methods.public'|trans({}, 'nvdoc_namespace') %}
    {% endif %}

    <div class="inline px-3 py-1 text-sm font-normal rounded-full {{ entity_color }} gap-x-2 dark:bg-gray-800">
        {{ entity_text }}
    </div>
</td>
